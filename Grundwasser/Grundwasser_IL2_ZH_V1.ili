      END Bez_Dokument_Typ_Gemeinde;

      ASSOCIATION Bez_Dokument_Objekt =
         Dokument (EXTERNAL) -- {1..*} Grundwasser_ZH_V1.Rechtsvorschriften.RV_Dokument;
